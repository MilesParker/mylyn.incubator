<?eclipse version="3.0"?>
<?eclipse version="3.0"?>
<plugin>
   <extension point = "org.eclipse.ui.popupMenus">
     <viewerContribution
        id="org.eclipse.mylar.monitor.commands"
        targetID="org.eclipse.jdt.ui.PackageExplorer">
	    <action  
  		  	label="Mylar Reports: Usage Summary" 
	  		tooltip="Mylar Reports: Usage Summary"
	  		menubarPath="mylar.monitor" 
	  		id="org.eclipse.mylar.monitor.reports.ui.actions.ComputeSummaryAction" 
	  		class="org.eclipse.mylar.monitor.reports.ui.actions.UsageSummaryAction"
	  		icon="icons/eview16/monitor.gif"
	  		enablesFor="*"/>   
	  	<action  
  		  	label="Mylar Reports: User Analysis" 
	  		tooltip="Mylar Reports: User Analysis"
	  		menubarPath="mylar.monitor" 
	  		id="org.eclipse.mylar.monitor.reports.ui.actions.ComputeSummaryAction" 
	  		class="org.eclipse.mylar.monitor.reports.ui.actions.UserAnalysisAction"
	  		icon="icons/eview16/monitor.gif"
	  		enablesFor="*"/>   
	 </viewerContribution> 
	 <viewerContribution
        id="org.eclipse.mylar.monitor.commands"
        targetID="org.eclipse.ui.views.ResourceNavigator">
	    <action  
  		  	label="Mylar Reports: Usage Summary" 
	  		tooltip="Mylar Reports: Usage Summary"
	  		menubarPath="mylar.monitor" 
	  		id="org.eclipse.mylar.monitor.reports.ui.actions.ComputeSummaryAction" 
	  		class="org.eclipse.mylar.monitor.reports.ui.actions.UsageSummaryAction"
	  		icon="icons/eview16/monitor.gif"
	  		enablesFor="*"/>   
	  		    <action  
  		  	label="Mylar Reports: User Analysis" 
	  		tooltip="Mylar Reports: User Analysis"
	  		menubarPath="mylar.monitor" 
	  		id="org.eclipse.mylar.monitor.reports.ui.actions.ComputeSummaryAction" 
	  		class="org.eclipse.mylar.monitor.reports.ui.actions.UserAnalysisAction"
	  		icon="icons/eview16/monitor.gif"
	  		enablesFor="*"/>   
	 </viewerContribution> 
   </extension>
	  		
	<extension
        point="org.eclipse.ui.editors">
     <editor
           icon="icons/eview16/monitor.gif"
           class="org.eclipse.mylar.monitor.reports.ui.views.UsageStatsEditorPart"
           name="Usage Summary"
           id="org.eclipse.mylar.monitor.reports.ui.actions.monitorSummaryReport"/>
     <editor
           icon="icons/eview16/monitor.gif"
           class="org.eclipse.mylar.monitor.reports.ui.views.UsageStatsEditorPart"
           name="User Analysis"
           id="org.eclipse.mylar.monitor.reports.ui.actions.monitorUsersReport"/>
  </extension>
  
   <extension point="org.eclipse.ui.viewActions"> 
   <viewContribution
         id="org.eclipse.mylar.monitor.reports.ui.switchTaskFolder"
         targetID="org.eclipse.mylar.tasks.ui.views.TaskListView">
      <action
            class="org.eclipse.mylar.monitor.reports.ui.actions.SwitchTaskDataFolderAction"
            icon="icons/eview16/folder.gif"
            id="org.eclipse.mylar.monitor.reports.ui.actions.switchTask"
            label="Switch Task Data Folder..."
            menubarPath="context"
            style="push">
      </action>
   </viewContribution>
   </extension>
  
   <extension point="org.eclipse.ui.preferencePages">
      <page 
         name="Reports"
         class="org.eclipse.mylar.monitor.reports.preferences.MylarReportsPreferencePage"
         id="org.eclipse.mylar.monitor.reports"
         category="org.eclipse.mylar.ui.preferences">
      </page>  
   </extension>
</plugin>

